<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidBatch2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <style name="Theme.AndroidBatch2" parent="Base.Theme.AndroidBatch2" />

    <style name="text_bi_20" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="text_18" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="edit_15" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:paddingHorizontal">@dimen/_15sdp</item>
        <item name="android:paddingVertical">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_18" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>